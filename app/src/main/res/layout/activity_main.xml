<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="12dp"
        android:src="@mipmap/ic_launcher_pizzadelivery"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/email"
            android:textSize="32sp"
            android:layout_marginStart="10dp"
            tools:ignore="NestedWeights" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:hint="@string/hintEmail"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            tools:ignore="Autofill" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSenha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/senha"
            android:textSize="32sp"
            android:layout_marginStart="10dp"
            tools:ignore="NestedWeights" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="@string/hintSenha"
            android:textSize="20sp"
            tools:ignore="Autofill" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_entrar"
            android:drawableStart="@drawable/ic_action_name"
            android:layout_marginStart="10dp"
            android:shadowColor="#000000"
            android:paddingStart="10dp"
            android:text="@string/logar"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/txtNaoCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:onClick="CadastroPessoaActivity"
            android:padding="10dp"
            android:text="@string/nconta"
            android:textColor="#666"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/txtCardapio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="CardapioActivity"
            android:padding="10dp"
            android:text="@string/cCardapio"
            android:textColor="#666"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            tools:ignore="NestedWeights" />
    </LinearLayout>
</LinearLayout>